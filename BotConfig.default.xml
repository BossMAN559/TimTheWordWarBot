<config>
    <server>irc.example.net</server>
    <channels>
        <channel>#example</channel>
    </channels>
    <nicks>
        <nick>
            <name>Timmy</name>
            <pass>Password</pass>
        </nick>
    </nicks>
    <admins>
        <admin>AdminUser</admin>
    </admins>
	<ignore>
		<nick>TrutherWriter</nick>
		<nick>PLACEHOLDER</nick>
	</ignore>
</config>
